@model S2021A6FH.Models.TrackWithDetailViewModel

@{
    ViewBag.Title = "Details";
    var user = new S2021A6FH.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Track Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <hr />

        <dt>
            Sample clip
        </dt>

        <dd>
            <audio src="/Track/Clip/@Model.Id" controls="controls"></audio>
        </dd>

        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.Composers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composers)
        </dd>

    </dl>
</div>
<p>
    @if (user.HasRoleClaim("Clerk"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        @Html.Raw("|\n")
    }

    @Html.ActionLink("Back to List", "Index")
</p>
