@model IEnumerable<S2021A6FH.Models.TrackBaseViewModel>

@{
    ViewBag.Title = "Index";
    var user = new S2021A6FH.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                @if (user.HasRoleClaim("Clerk"))
                {
                    @Html.Raw("| \n")
                    @Html.ActionLink("Details ", "Details", new { id = item.Id })
                    @Html.Raw("|\n")
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }


            </td>
        </tr>
    }

</table>
